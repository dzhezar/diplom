{% extends 'base.html.twig' %}
{% block body %}
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span>Category</span>
                    <h3>{{ category.name }}</h3>
                    <p>Category description here.. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam error eius quo, officiis non maxime quos reiciendis perferendis doloremque maiores!</p>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-white">
        <div class="container">
            <div class="row">
                {% for post in categoryPosts %}
                    <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="#"><img src="{{ asset('uploads/img/' ~ post.image) }}" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">{{ post.category.name }}</span>

                            <h2><a href="{{ path('post', {id : post.id}) }}">{{ post.title }}</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <span class="d-inline-block mt-1">By <a href="#">{{ post.author.name }}</a></span>
                                <span>&nbsp;-&nbsp; {{ post.created | date('d/m/y') }}</span>
                            </div>

                            <p>{{ post.text }}</p>
                            <p><a href="{{ path('post', {id : post.id}) }}">Read More</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row text-center pt-5 border-top">
                <div class="col-md-12">
                    <div class="navigation" style="display: flex; justify-content: center">
                        {{ knp_pagination_render(categoryPosts) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
