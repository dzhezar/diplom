{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container-fluid px-xl-5">
        <section class="py-5">
            <div class="row">
                <div class="col-lg-12 mb-4">
                    <div class="card">
                        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                            <h6 class="text-uppercase mb-0">Користувачі</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover card-text table-responsive">
                                <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Роль</th>
                                    <th>Ім'я</th>
                                    <th>Аутентифікований через Facebook</th>
                                    <th>Аутентифікований через Google</th>
                                    <th>Дії</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.roles | first }}</td>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.facebookId ? '+' : '-' }}</td>
                                        <td>{{ user.googleId ? '+' : '-' }}</td>
                                        <td>
                                            <a class="btn btn-warning" href="{{ path('admin_user_edit',{'id': user.id}) }}">Редагувати</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(users) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
