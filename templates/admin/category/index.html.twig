{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container-fluid px-xl-5">
            <section class="py-5">
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <div class="card">
                            <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                                <h6 class="text-uppercase mb-0">Категорії</h6>
                                <a class="btn btn-primary" href="{{ path('admin_category_add') }}">Додати</a>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-hover card-text">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Назва</th>
                                        <th>Видима для користувачів</th>
                                        <th>Дії</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                    <tr>
                                        <th scope="row">{{ category.id }}</th>
                                        <td>{{ category.name }}</td>
                                        <td>{{ category.isVisible ? 'Так' : 'Ні' }}</td>
                                        <td>
                                            <a class="btn btn-warning" href="{{ path('admin_category_edit',{'id': category.id}) }}">Редагувати</a>
                                            <a class="btn btn-danger" href="{{ path('admin_category_delete',{'id': category.id}) }}">Видалити</a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div class="navigation">
                                    {{ knp_pagination_render(categories) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
</div>
{% endblock %}
